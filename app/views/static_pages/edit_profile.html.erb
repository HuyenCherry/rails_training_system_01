  <div class="with-border>
    <h3 class="box-title">Edit profile: Linh</h3>
  </div>
  <div class="box-body user-form-box">
    <%= form_for :user, role: "form" do |f| %>
      <div class="row">
        <!-- react-empty: 76 -->
        <div class="col-md-12">
          <div class="basic-form">
            <div class="form-group clearfix">
              <%= f.label :name, class: "col-sm-4 control-label" %>
              <div class="col-sm-8">
                <div class="input-group"><span class="input-group-addon"><i class="fa fa-users"></i></span>
                  <%= f.text_field :name, class: "form-control", id: "name" %>
                </div>
              </div>
            </div>
            <div class="form-group clearfix">
              <%= f.label :email, class: "col-sm-4 control-label" %>
              <div class="col-sm-8">
                <div class="input-group"><span class="input-group-addon"><i class="fa fa-envelope"></i></span>
                  <%= f.email_field :email, class: "form-control", id: "email" %>
                </div>
              </div>
            </div>
            <div class="form-group clearfix">
              <%= f.label :password, class: "col-sm-4 control-label" %>

              <div class="col-sm-8">
                  <%= f.password_field :password, class: "form-control", id: "password" %>
              </div>
            </div>
            <div class="form-group clearfix">
              <%= f.label :password_confirmation, class: "col-sm-4 control-label" %>
              <div class="col-sm-8">
                <%= f.password_field :password_confirmation, class: "form-control", id: "password_confirmation" %>
              </div>
            </div>
            <div class="form-group clearfix">
              <%= f.label :address, class: "col-sm-4 control-label" %>
              <div class="col-sm-8">
                <%= f.text_field :address, class: "form-control" %>
              </div>
            </div>
            <div class="form-group clearfix">
              <%= f.label :display_name, class: "col-sm-4 control-label" %>
              <div class="col-sm-8">
                <%= f.text_field :display_name, class: "form-control" %>
              </div>
            </div>
            <div class="form-group clearfix">
              <%= f.label :avatar, class: "col-sm-4 control-label" %>
              <div class="col-sm-8">
                <%= f.file_field :avatar, accept: Settings.accept, class: "form-control" %>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="text-right">
          <button class="btn btn-primary">Update</button>
        </div>
      </div>
    <% end %>
  </div>
