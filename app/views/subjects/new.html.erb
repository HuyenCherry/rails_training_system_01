<div class="row">
  <div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
      <div class="x_title">
        <h2><%= t "create_subject" %></h2>
        <div class="clearfix"></div>
      </div>
      <div class="x_content">
        <br />
        <%= form_for :subject, url: subjects_path,
          class:"form-horizontal form-label-left" do |f| %>
          <div class="form-group">
            <%= f.label :name, t("name"),
              class:"control-label col-md-3 col-sm-3 col-xs-12" %>
            <div class="col-md-6 col-sm-6 col-xs-12">
              <%= f.text_field :name, required:"required",
                class: "form-control col-md-7 col-xs-12" %>
            </div>
          </div>
          <br/>
          <br/>
          <br/>
          <div class="form-group">
            <%= f.label :name, t("detail"),
              class:"control-label col-md-3 col-sm-3 col-xs-12" %>
            <div class="col-md-6 col-sm-6 col-xs-12">
              <%= f.text_area :detail, required:"required",
                class: "form-control col-md-7 col-xs-12" %>
            </div>
          </div>
          <br/>
          <br/>
          <br/>
          <br/>
          <div class="form-group">
            <%= f.label :category, t("category"),
              class:"control-label col-md-3 col-sm-3 col-xs-12" %>
            <div class="col-md-9 col-sm-9 col-xs-12">
              <%= f.select :category, options_for_select(
                [Settings.git, Settings.ruby, Settings.rails],
                selected: Settings.git), class: "select-custom" %>
            </div>
          </div>
          <br/>
          <br/>
          <div class="form-group">
            <%= f.label :name, t("status"),
              class:"control-label col-md-3 col-sm-3 col-xs-12" %>
            <div class="col-md-6 col-sm-6 col-xs-12">
              <%= f.radio_button :status, "active", checked: true %>
              <%= f.label :active, Settings.active, class: "field-label"%>
              <br/>
              <%= f.radio_button :status, "unactive" %>
              <%= f.label :unactive, Settings.unactive, class: "field-label"%>
            </div>
          </div>
          <div class="clearfix"></div>
          <div class="ln_solid"></div>
          <div class="form-group">
            <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
              <%= link_to t("cancel"), subjects_path, class: "btn btn-primary" %>
              <%= f.submit t("create"), class: "btn btn-success submit-button" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
