<div class="">
  <div class="page-title">
    <div class="title_left">
      <h3><%= t "current_course" %></h3>
    </div>

    <div class="title_right">
    <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
      <div class="input-group">
      <input type="text" class="form-control" placeholder="Search for...">
      <span class="input-group-btn">
        <button class="btn btn-default" type="button">
          <%= t "search_course" %>
        </button>
      </span>
      </div>
    </div>
    </div>
  </div>

  <div class="clearfix"></div>

  <div class="row">
    <div class="clearfix"></div>

    <div class="col-md-12 col-sm-12 col-xs-12">
      <div class="x_panel">
        <div class="x_content">

          <div class="table-responsive">
            <table class="table table-striped jambo_table bulk_action">
              <thead>
                <tr class="headings">
                  <th>
                    <input type="checkbox" id="check-all" class="flat">
                  </th>
                  <th class="column-title">
                    <%= t "name" %>
                  </th>
                  <th class="column-title">
                    <%= t "detail" %>
                  </th>
                  <th class="column-title">
                    <%= t "category" %>
                  </th>
                  <th class="column-title no-link last"><span class="nobr">
                    <%= t "view_course" %>
                  </span>
                  </th>
                  <th class="column-title">
                    <%= t ".edit" %>
                  </th>
                </tr>
              </thead>
              <tbody>
                <% @course.each do |course| %>
                  <tr class="even pointer">
                    <td class="a-center ">
                      <input type="checkbox" class="flat" name="table_records">
                    </td>
                    <td class=" ">
                      <%= hidden_field_tag "course_id", course.id %>
                      <%= course.name %>
                    </td>
                    <td class=" ">
                      <%= course.detail %>
                    </td>
                    <td class=" ">
                      <%= course.get_category %>
                    </td>
                    <td class="">
                      <%= link_to t(".view_course"), user_course_path(course.id), data: { turbolinks: false } %>
                    </td>
                    <td class="last">
                      <%= link_to t(".edit_course"), edit_course_path(course.id), data: { turbolinks: false } %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
