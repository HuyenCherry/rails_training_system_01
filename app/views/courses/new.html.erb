<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @course, local: true do |f| %>
      <%= render "shared/error_messages", object: f.object %>

      <h3><%= t ".new_course" %></h3>

      <%= f.label :name, t(".name"), class: "field-label" %>
      <%= f.text_field :name, class: "form-control field-input" %>

      <%= f.label :detail, t(".detail"), class: "field-label" %>
      <%= f.text_area :detail, class: "form-control field-input" %>

      <%= f.label :category, t(".category"), class: "field-label" %>

      <br>
      <%= f.radio_button :category, "practice" %>
      <%= f.label :category_practice, Settings.practice, class: "field-label" %>

      <br>
      <%= f.radio_button :category, "open" %>
      <%= f.label :category_open, Settings.open, class: "field-label" %>

      <br>
      <%= f.radio_button :category, "intern" %>
      <%= f.label :category_intern, Settings.intern, class: "field-label"%>

      <br>
      <%= f.submit t(".submit"), class: "btn btn-primary submit-button" %>
    <% end %>
  </div>
</div>
