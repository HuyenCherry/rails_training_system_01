<div class="row">
  <div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
      <div class="x_title">
        <h2><%= t "edit_subject" %></h2>
        <div class="clearfix"></div>
      </div>
      <div class="x_content">
        <br />
        <%= form_for @user_subject, url: user_subject_path, method: :patch,
          class:"form-horizontal form-label-left" do |f| %>
          <div class="form-group row">
            <%= f.label :progress, t("progress"),
              class:"control-label col-md-3 col-sm-3 col-xs-12" %>
            <div class="col-md-6 col-sm-6 col-xs-12">
              <%= f.text_field :progress, required:"required",
                class: "form-control col-md-7 col-xs-12" %>
            </div>
          </div>
          <div class="form-group row">
            <%= f.label :start_date, t("start_date"),
              class:"control-label col-md-3 col-sm-3 col-xs-12" %>
              <div class="col-md-6 col-sm-6 col-xs-12">
                <%= f.date_field :start_date, required:"required", class: "contact_input" %>
              </div>
          </div>
          <div class="form-group row">
            <%= f.label :end_date, t("end_date"),
              class:"control-label col-md-3 col-sm-3 col-xs-12" %>
              <div class="col-md-6 col-sm-6 col-xs-12">
                <%= f.date_field :end_date, required:"required", class: "contact_input" %>
              </div>
          </div>
          <div class="form-group row">
            <%= f.label :status, t("status"),
              class:"control-label col-md-3 col-sm-3 col-xs-12" %>
            <div class="col-md-6 col-sm-6 col-xs-12">
              <%= f.radio_button :status, "active" %>
              <%= f.label :active, Settings.active, class: "field-label"%>
              <br/>
              <%= f.radio_button :status, "unactive" %>
              <%= f.label :unactive, Settings.unactive, class: "field-label"%>
            </div>
          </div>
          <div class="clearfix"></div>
          <div class="ln_solid"></div>
          <div class="form-group">
            <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
              <%= link_to t("cancel"), user_subject_path(@user_subject.subject_id),
                class: "btn btn-primary" %>
              <%= link_to t("reset"), edit_user_subject_path(@user_subject),
                class: "btn btn-primary" %>
              <%= f.submit t("update"), class: "btn btn-success submit-button" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
