<div class="with-border>
<h3 class="box-title"><%= t "edit_profile" %>:
  <%= current_user.name %>
</h3>
</div>
<div class="box-body user-form-box">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
  <div class="row">
    <!-- react-empty: 76 -->
    <div class="col-md-12">
      <div class="basic-form">
        <div class="form-group clearfix">
          <%= f.label :name, class: "col-sm-4 control-label" %>
          <div class="col-sm-8">
            <div class="input-group"><span class="input-group-addon"><i class="fa fa-users"></i></span>
              <%= f.text_field :name, class: "form-control", id: "name", disabled: "disabled" %>
            </div>
          </div>
        </div>
        <div class="form-group clearfix">
          <%= f.label :email, class: "col-sm-4 control-label" %>
          <div class="col-sm-8">
            <div class="input-group"><span class="input-group-addon"><i class="fa fa-envelope"></i></span>
              <%= f.email_field :email, class: "form-control", id: "email" %>
            </div>
          </div>
        </div>
        <div class="form-group clearfix">
          <%= f.label :password, class: "col-sm-4 control-label" %>
          <div class="col-sm-8">
            <%= f.password_field :password, class: "form-control", id: "password" %>
          </div>
        </div>
        <div class="form-group clearfix">
          <%= f.label :password_confirmation, class: "col-sm-4 control-label" %>
          <div class="col-sm-8">
            <%= f.password_field :password_confirmation, class: "form-control", id: "password_confirmation" %>
          </div>
        </div>
        <div class="form-group clearfix">
          <%= f.label :current_password, class: "col-sm-4 control-label" %>
          <div class="col-sm-8">
            <%= f.password_field :current_password, class: "form-control" %>
          </div>
        </div>
        <div class="form-group clearfix">
          <%= f.label :avatar, class: "col-sm-4 control-label" %>
          <div class="col-sm-8">
            <%= f.file_field :avatar, accept: Settings.accept, class: "form-control" %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="text-right">
      <div class="actions">
        <%= f.submit t("update"), class: "btn-update" %>
      </div>
    </div>
  </div>
<% end %>
</div>
