<div class="modal fade" id="modal-window-create-course-subject" tabindex="-1"
  role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"
          aria-hidden="true">Ã—</button>
        <h3 id="create-course-subject-modal"><%= t ".create_course_subject" %></h3>
      </div>
      <%= form_for @course_subject, id: "cs-form", url: course_subjects_path, remote: true do |f| %>
        <div class="modal-body">
          <%= render "shared/error_messages", object: f.object %>

          <%= f.label :course_id, t(".course"), class: "field-label" %>
          <%= f.collection_select :course_id, Course.all, :id, :name,
            class: "form-control field-input" %>

          <br>
          <select id="mySelect2" class="js-example-basic-multiple" name="subjects[]" multiple="multiple">
            <%= render partial: "course_subjects/options", locals: {options: @options} %>
          </select>

          <br>
        </div>
        <br>
        <div class="modal-footer">
          <button class="btn btn-danger" data-dismiss="modal"
            aria-hidden="true"><%= t ".close" %></button>
          <%= f.submit t(".submit"), class: "btn btn-primary submit-button",
            id: "submit-course-subject" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
