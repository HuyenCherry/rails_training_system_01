<div class="modal fade" id="modal-window-create-user-course" tabindex="-1"
  role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"
          aria-hidden="true">Ã—</button>
        <h3 id="create-user-course-modal"><%= t ".create_user_course" %></h3>
      </div>
      <%= form_for @user_course, url: new_user_course_path do |f| %>
        <div class="modal-body">
          <%= render "shared/error_messages", object: f.object %>

          <%= f.label :course_id, t(".course"), class: "field-label" %>
          <%= f.collection_select :course_id, Course.all, :id, :name,
            class: "form-control field-input" %>

          <br>
          <input type="text" class="form-control" id="search-form">
          <div class="row">
            <div id="response" class="col-md-6"></div>
            <div class="col-md-6 well" id="user-well"></div>
          </div>

          <br>
        </div>
        <br>
        <div class="modal-footer">
          <button class="btn btn-danger" data-dismiss="modal"
            aria-hidden="true"><%= t ".close" %></button>
          <%= f.submit t(".submit"), class: "btn btn-primary submit-button",
            id: "submit-user-course" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
